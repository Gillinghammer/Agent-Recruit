extends layout

block content
  .row
    .col-lg-12
      .jumbotron
        h1#intro
        p.intro-text 
        p.instructions
        a#authenticate.btn.btn-primary.btn-lg.hidden(href="/dashboard") Begin Authentication
  script.
    $(function(){
      $("#authenticate").on("click", function(e){
        $.post( "/start", function( data ) {
          console.log('req sent to start timer')
        });
      })

      $("#intro").typed({
          strings: ["Top Secret"],
          typeSpeed: 0,
          showCursor: false,
          onStringTyped: function() {
            $(".intro-text").typed({
                strings: ["You're being recruited by an elite special forces to engage in a clandestine operation. The background check we ran makes you an excellent choice. Please confirm your identity by completing the following challenges."],
                typeSpeed: 10,
                showCursor: false,
                onStringTyped: function() {
                  $(".instructions").typed({
                      strings: ["You'll have 3 hours to complete before your application self-destructs."],
                      typeSpeed: 0,
                      showCursor: false,
                      onStringTyped: function() {
                        $('#authenticate').addClass('animated fadeInUp');
                        $('#authenticate').removeClass('hidden');
                      }
                  })
                }
            });
          }
      });
      
    });